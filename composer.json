{
  "name": "gymsync/api",
  "description": "GymSync API built with Slim Framework 3 for workout tracking and load progression.",
  "type": "project",
  "license": "MIT",
  "require": {
    "slim/slim": "^3.0",
    "firebase/php-jwt": "^6.0",
    "guzzlehttp/guzzle": "^7.0",
    "vlucas/phpdotenv": "^5.3"
  },
  "autoload": {
    "psr-4": {
      "Src\\": "src/"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  }
}
